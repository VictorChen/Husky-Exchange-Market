<header class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <nav>
        <%= link_to image_tag("huskyexchange.PNG", :border => 0, :alt => '', :title => ''), root_path %>
        <%= form_tag(search_path, :method => 'get') do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", :name => nil, :id => 'submit-button', :class => 'btn btn-primary' %> 
        <% end %> 
        <ul class="nav pull-right">
          <li style="position: relative; top: 10px;"><i class="icon-home"></i></li>
          <li><%= link_to "Home", root_path %></li>
          <% if signed_in? %>
            <li style="position: relative; top: 10px;"><i class="icon-user"></i></li>
            <li><%= link_to "Users", users_path %></li>
            <li style="position: relative; top: 10px;"><i class="icon-briefcase"></i></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Manage Items", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li style="position: relative; top: 10px;"><i class="icon-user"></i></li>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>