<div class="products well">
	<span class="user"><span title="<%= feed_item.name %>"><%= link_to feed_item.user.name, feed_item.user %> - <%= feed_item.name %></span></span>
	<div class="description"><%= feed_item.description %></div>
	<div class="info">
		<div class="price">
			$<%= number_with_precision feed_item.price, :precision => 2 %>
		</div>
		<div class="timestamp">
		Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
		</div>
	</div>
	<% if not current_user.nil? %>
	<% if current_user?(feed_item.user) || current_user.admin?%>
		<%= link_to "edit", edit_product_path(feed_item) %> | 
		<%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.name %>
	<% end %>
	<% end %>
</div>