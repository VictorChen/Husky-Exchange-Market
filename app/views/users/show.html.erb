<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if signed_in? %>
      <a href="mailto:<%= @user.email %>"><%= @user.email %></a>
      <% end %>
    </section>
  </aside>
</div>
<%= will_paginate @products %>
<% if @user.products.any? %>
  <h3><%= @user.name %>'s Products (<%= @user.products.count %>):</h3>
    <%= render @products %>
<% end %>
<div style="float: right; clear: both;">
<%= will_paginate @products %>
</div>